{
  "name": "esy-pixman",
  "version": "0.38.4000",
  "description": "pixman-0.38.4 packaged for esy",
  "esy": {
    "buildsInSource": true,
    "exportedEnv": {
      "PKG_CONFIG_PATH": {
        "scope": "global",
        "val": "#{self.lib / 'pkgconfig' :  }"
      }
    },
    "build": [
      "find ./ -exec touch -t 200905010101 {} +",
      [
        "chmod",
        "755",
        "./configure"
      ],
      [
        "bash",
        "-c",
        "./configure --prefix=#{self.install} --disable-dependency-tracking #{os == 'windows' ? '--host x86_64-w64-mingw32' : ''}"
      ],
      [
        "make"
      ],
      [
        "make",
        "install"
      ]
    ]
  },
  "dependencies": {},
  "resolutions": {}
}
